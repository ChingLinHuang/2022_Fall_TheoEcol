library(deSolve) 

### (1) Model specification 
exponential_model <- function(times, parms, state,I) { 
  with(as.list(c(parms, state,I)), { 
    dN_dt = r*N+I  # exponential growth equation 
    return(list(c(dN_dt)))  # return the results 
  }) 
} 

### (2) Model application 

times <- seq(0, 7, by = 0.01)  # time steps to integrate over 
state <- c(N = 10)  # initial population size 
parms <- c(r = 1.2)  # intrinsic growth rate 
I     <- c(I = 3) 
# run the ode solver 
pop_size <- ode(func = exponential_model, times = times, y = 
                  state, parms = parms, I=I) 
head(pop_size)
# take a look at the results 
plot(N ~ time, data = pop_size, log = "",ylim=c(1,60000)) 
max(pop_size) 